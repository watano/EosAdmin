{
  "root": true,
  "extends": ["plugin:vue/recommended", "@vue/prettier"],
  "plugins": ["html", "vue"],
  "rules": {
    "eqeqeq": ["error", "always", { "null": "ignore" }],
    "arrow-parens": 0,
    "generator-star-spacing": 0,
    "no-mixed-spaces-and-tabs": 0,
    "indent": [0, "tab"],
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "spaced-comment": 0,
    "space-before-function-paren": 0,
    "camelcase": "off",
    "no-debugger": 0,
		"no-console": ["off", { "allow": ["debug", "info", "warn", "error"] }],
		"no-unused-vars": ["warn", { "vars": "local" }]
	},
	"env": {
		"browser": true,
		"node": true
	}
}
